@model BasketWorld.Models.ViewModels.LeaguePageViewModel
@{
    ViewData["Title"] = Model.LeagueName;

    // Helpers pour fallback si une héro-image n’est pas renseignée
    string HomeHero(dynamic g) => g?.HomeTeam?.HeroImageUrl ?? Url.Content("~/images/team-bg/default-home.png");
    string AwayHero(dynamic g) => g?.AwayTeam?.HeroImageUrl ?? Url.Content("~/images/team-bg/default-away.png");
}

<h1 class="mb-4" style="color: var(--orange)">@Model.LeagueName</h1>

@if (Model.Teams?.Any() == true)
{
    <div class="logo-carousel-wrapper mb-5">
        <button class="carousel-btn left" type="button" aria-label="Défiler vers la gauche">‹</button>

        <div class="logo-carousel" id="logoCarousel">
            @foreach (var team in Model.Teams)
            {
                <div class="logo-item" title="@team.Name">
                    <img src="@(string.IsNullOrEmpty(team.LogoUrl) ? Url.Content("~/images/logos/fallback.png") : team.LogoUrl)" alt="@team.Name" />
                    <span>@team.Name</span>
                </div>
            }
        </div>

        <button class="carousel-btn right" type="button" aria-label="Défiler vers la droite">›</button>
    </div>
}

@if (Model.UpcomingGames?.Any() == true)
{
    <h2 class="h4 mb-3">Matchs à venir</h2>
    <div class="games-list">
        @foreach (var g in Model.UpcomingGames)
        {
            <div class="game-card"
                style="background-image:
                        linear-gradient(180deg, rgba(255,255,255,.55), rgba(255,255,255,.55)),
                        url('@HomeHero(g)');">
            <div class="bg-away" style="background-image:url('@AwayHero(g)')"></div>

            <div class="teams">
                <div class="team home">
                <span class="name">@g.HomeTeam?.Name</span>
                <img src="@(string.IsNullOrEmpty(g.HomeTeam?.LogoUrl) ? Url.Content("~/images/logos/fallback.png") : g.HomeTeam!.LogoUrl)" alt="@g.HomeTeam?.Name" />
                </div>
                <strong class="vs">vs</strong>
                <div class="team away">
                <span class="name">@g.AwayTeam?.Name</span>
                <img src="@(string.IsNullOrEmpty(g.AwayTeam?.LogoUrl) ? Url.Content("~/images/logos/fallback.png") : g.AwayTeam!.LogoUrl)" alt="@g.AwayTeam?.Name" />
                </div>
            </div>

            <div class="meta">
                <span class="date">@g.StartAt.ToLocalTime().ToString("dddd d MMMM yyyy HH:mm")</span>
                @if (!string.IsNullOrWhiteSpace(g.Venue)) { <span class="venue">— @g.Venue</span> }
            </div>

            <a class="btn-reserve" asp-controller="Games" asp-action="Details" asp-route-id="@g.Id">Détails & Réserver</a>
            </div>
        }
    </div>
}
else
{
    <p>Aucun match à venir pour le moment.</p>
}

@if (Model.PastGames?.Any() == true)
{
    <h2 class="h4 mt-5 mb-3">Résultats récents</h2>
    <div class="games-list past">
        @foreach (var g in Model.PastGames)
        {
            <div class="game-card"
                 style="background-image:
                         linear-gradient(180deg, rgba(255,255,255,.55), rgba(255,255,255,.55)),
                         url('@HomeHero(g)');">
                <div class="bg-away" style="background-image:url('@AwayHero(g)')"></div>

                <div class="teams">
                    <div class="team home">
                        <span class="name">@g.HomeTeam?.Name</span>
                        <img src="@(string.IsNullOrEmpty(g.HomeTeam?.LogoUrl) ? Url.Content("~/images/logos/fallback.png") : g.HomeTeam!.LogoUrl)" alt="@g.HomeTeam?.Name" />
                    </div>

                    <strong class="vs">vs</strong>

                    <div class="team away">
                        <span class="name">@g.AwayTeam?.Name</span>
                        <img src="@(string.IsNullOrEmpty(g.AwayTeam?.LogoUrl) ? Url.Content("~/images/logos/fallback.png") : g.AwayTeam!.LogoUrl)" alt="@g.AwayTeam?.Name" />
                    </div>
                </div>

                <div class="meta">
                    <span class="date">@g.StartAt.ToLocalTime().ToString("dddd d MMMM yyyy HH:mm")</span>
                    @* Chip score à la place du bouton *@
                    @if (g.HomeScore.HasValue && g.AwayScore.HasValue)
                    {
                        var winClass = g.HomeScore > g.AwayScore ? "home-win" : g.HomeScore < g.AwayScore ? "away-win" : "draw";
                        <span class="final-score @winClass">
                            <span class="team-name">@g.HomeTeam?.Name</span>
                            <strong class="num home">@g.HomeScore</strong>
                            <span>–</span>
                            <strong class="num away">@g.AwayScore</strong>
                            <span class="status">@(string.IsNullOrWhiteSpace(g.Status) ? "Final" : g.Status)</span>
                        </span>
                    }
                </div>
                @* pas de bouton ici *@
            </div>
        }
    </div>
}


<script>
document.addEventListener('DOMContentLoaded', () => {
  const wrap = document.querySelector('.logo-carousel-wrapper');
  const scroller = wrap?.querySelector('#logoCarousel');
  const btnL = wrap?.querySelector('.carousel-btn.left');
  const btnR = wrap?.querySelector('.carousel-btn.right');
  if (!wrap || !scroller || !btnL || !btnR) return;

  const cell = () => (scroller.firstElementChild?.getBoundingClientRect().width || 132);
  const step = () => Math.max(Math.round(scroller.clientWidth * 0.8), Math.round(5 * cell()));

  const updateArrows = () => {
    const max = scroller.scrollWidth - scroller.clientWidth - 1;
    btnL.classList.toggle('is-disabled', scroller.scrollLeft <= 0);
    btnR.classList.toggle('is-disabled', scroller.scrollLeft >= max);
    btnL.setAttribute('aria-disabled', btnL.classList.contains('is-disabled'));
    btnR.setAttribute('aria-disabled', btnR.classList.contains('is-disabled'));
  };

  btnL.addEventListener('click', () => scroller.scrollBy({ left: -step(), behavior: 'smooth' }));
  btnR.addEventListener('click', () => scroller.scrollBy({ left:  step(), behavior: 'smooth' }));
  scroller.addEventListener('scroll', updateArrows, { passive: true });

  updateArrows();
});
</script>
