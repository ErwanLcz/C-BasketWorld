@model List<Game>
@{
    ViewData["Title"] = ViewBag.LeagueName;
}

<h1 class="mb-4" style= "color: var(--orange)">@ViewBag.LeagueName</h1>

@if (!Model.Any())
{
    <div class="text-muted">Aucun match pour cette ligue.</div>
}
else
{
    <div class="row g-3">
        @foreach (var g in Model)
        {
            <div class="col-md-4">
                <div class="card bg-dark text-white border shadow-lg p-3 h-100 border-warning">
                    <h5 class="card-title text-uppercase" style= "color: var(--orange)">@g.League.Name</h5>
                    <div class="mb-2">
                        <strong>@g.HomeTeam.Name</strong> 
                        <span class="text-secondary">vs</span> 
                        <strong>@g.AwayTeam.Name</strong>
                    </div>
                    <div class="text-light">
                        @g.StartAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm") — @g.Venue
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-warning text-dark fw-bold w-100"
                           asp-controller="Games" asp-action="Details" asp-route-id="@g.Id">
                            Détails / Réserver
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
